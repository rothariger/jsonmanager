<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/etnode_name"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:hint="Name"
        android:textSize="10sp" />


    <EditText
        android:id="@+id/etnode_value"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:hint="Value"
        android:textSize="10sp" />

    <com.truchisoft.jsonmanager.print.PrintView
        android:id="@+id/etb_Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconColor="@android:color/holo_green_dark"
        app:iconSize="24dp"
        app:iconText="@string/ic_check" />

    <com.truchisoft.jsonmanager.print.PrintView
        android:id="@+id/etb_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconColor="@android:color/holo_red_dark"
        app:iconSize="24dp"
        app:iconText="@string/ic_close" />

</LinearLayout>